
extends layout

block content
  include author
  each article in articles
    article.article.intro
      header
        p.date
          span= moment.utc(article.date).format('DD. MMMM YYYY')
        h2
          a(href='/CookBook' + article.url)= article.title
      section.content
        if article.intro.length > 0
          != article.intro
        if article.hasMore
          p.more
            a(href='/CookBook' + article.url) more

block prepend footer
  div.nav
    if prevPage
      a(href='/CookBook' + prevPage.url) &laquo; Newer
    else
      a(href='/CookBook/archive.html') &laquo; Archives
    if nextPage
      a(href='/CookBook' + nextPage.url) Next page &raquo;
